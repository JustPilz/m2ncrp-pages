{
    "gitbook": "3.x.x",
    "root": "./docs",
    "plugins": [
        "anchor-translit",
        "custom-favicon",
        "splitter",
        "fancybox",
        "hints",
        "jp-hints@git+https://github.com/JustPilz/gitbook-plugin-jp-hints.git",
        "underline",
        "hide-element",
        "addcssjs",
        "todo",
        "etoc-plus@git+https://github.com/JustPilz/gitbook-plugin-etoc-plus.git",
        "back-to-top-button",
        "collapsible-chapters",
        "sidebar-footer",
        "toggle-chapters",
        "-lunr", "-search", "search-plus-mod"
    ],
    "pluginsConfig": {

        "addcssjs":
            {
            "js": ["assets/js/settings.js",
                   "assets/js/custom.js",
                   "assets/js/md5.min.js"],
            "css": [ "assets/css/styles.css",
                     "assets/fancybox/jquery.fancybox1.css"]
        },
        "anchorjs": {
            "icon": "#",
            "placement": "left",
            "visible": "always",
            "class": "custom-class another-one"
        },
        "fontsettings": {
            "theme": "white",
            "family": "sans",
            "size": 2
        },
        "jp-hints": {
            "style": "toastr"
        },
        "etoc-plus": {
            "mindepth": 2,
            "maxdepth": 4,
            "header": 1,
            "notoc": true,
            "translit": false
        },
        "fancybox": {
            "helpers": {
                "title" : {
                "type" : "inside"
                },
                "buttons": {
                    "position" : "bottom"
                }
            }
        },
        "favicon": "assets/images/favicon.ico"
    },
    "links": {
        "home": true,
        "about": null,
        "issues": null,
        "contribute": null,

        "sharing": {
            "google": null,
            "facebook": null,
            "twitter": null
        }
    }
}
